using System;
class Program
{
    static void Main()
    {
        Console.Write("Enter a string: ");
        string str = Console.ReadLine();
        Console.Write("Enter character to count: ");
        char ch = Console.ReadLine()[0];
        int count = 0;

        foreach (var c in str)
        {
            if (c == ch)
                count++;
        }

        Console.WriteLine($"The character '{ch}' appears {count} times.");
    }
}
